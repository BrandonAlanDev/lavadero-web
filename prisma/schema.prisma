generator client {
  provider     = "prisma-client-js"
  output       = "../generated/prisma"
  relationMode = "prisma"
}

datasource db {
  provider = "mysql"
}

model account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              user    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// Modelo Bicicleta DE EJEMPLO
model Bicicleta {
  id       Int      @id @default(autoincrement())
  marca    String
  modelo   String
  rodado   Int
  color    String?
  creadaEn DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model servicio {
  id                String              @id
  nombre            String?
  srcImage          String?
  estado            Boolean
  createdAt         DateTime            @default(now())
  updatedAt         DateTime
  vehiculo_servicio vehiculo_servicio[]
}

model turno {
  id                 String            @id
  vehiculoServicioId String
  userId             String
  horarioReservado   DateTime
  precioCongelado    Decimal
  seniaCongelada     Decimal
  patente            String
  estado             Boolean
  createdAt          DateTime          @default(now())
  updatedAt          DateTime
  user               user              @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Turno_userId_fkey")
  vehiculo_servicio  vehiculo_servicio @relation(fields: [vehiculoServicioId], references: [id], onDelete: Cascade, map: "Turno_vehiculoServicioId_fkey")

  @@index([userId], map: "Turno_userId_fkey")
  @@index([vehiculoServicioId], map: "Turno_vehiculoServicioId_fkey")
}

model user {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique(map: "User_email_key")
  emailVerified DateTime?
  image         String?
  password      String?
  telefono      String?
  role          user_role @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  account       account[]
  turno         turno[]
}

model vehiculo {
  id                String              @id
  nombre            String?
  srcImage          String?
  estado            Boolean
  createdAt         DateTime            @default(now())
  updatedAt         DateTime
  vehiculo_servicio vehiculo_servicio[]
}

model vehiculo_servicio {
  id         String   @id
  vehiculoId String
  servicioId String
  duracion   Int
  precio     Decimal
  descuento  Decimal
  senia      Decimal
  estado     Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  turno      turno[]
  servicio   servicio @relation(fields: [servicioId], references: [id], onDelete: Cascade, map: "Vehiculo_Servicio_servicioId_fkey")
  vehiculo   vehiculo @relation(fields: [vehiculoId], references: [id], onDelete: Cascade, map: "Vehiculo_Servicio_vehiculoId_fkey")

  @@index([servicioId], map: "Vehiculo_Servicio_servicioId_fkey")
  @@index([vehiculoId], map: "Vehiculo_Servicio_vehiculoId_fkey")
}

model expeciones_laborales {
  id        String   @id
  motivo    String
  desde     DateTime
  hasta     DateTime
  estado    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model dia_laboral {
  id        String   @id @default(cuid())
  dia       Int
  estado    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  margenes margenes_laborales[]
}

model margenes_laborales {
  id        String   @id @default(cuid())
  diaId     String
  desde     DateTime
  hasta     DateTime
  estado    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dia dia_laboral @relation(fields: [diaId], references: [id], onDelete: Cascade)

  @@index([diaId])
}

enum user_role {
  USER
  ADMIN
}
